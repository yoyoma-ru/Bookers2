<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<h2>User info</h2>
			<div>image</div>
			<div class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
					    <th>1</th>
					</tr>
					<tr>
						<th>introduction</th>
					    <th>2</th>
					</tr>
				</tbody>
			</div>

			<div>
				<div>edit</div>
			</div>

			<h2>New Book</h2>
			<%= form_for @book do |t| %>
			  <h4>Title</h4>
			  <%= t.text_field :title %>
			  <h4>Opinion</h4>
			  <%= t.text_area :body %>
