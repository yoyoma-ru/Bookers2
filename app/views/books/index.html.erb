          <table class="table">
	        <thead>
		      <tr>
			    <th></th>
			    <th>Title</th>
			    <th>Opinion</th>
		      </tr>
	        </thead>
	        <tbody>
		      <%= @books.each do |book| %>
		        <tr>
			      <th>
				    image
			      </th>
			      <td>
				    <%= link_to "book.title", user_path(user.id) %>
			      </td>
			      <td>
				    <%= book.body %>
			      </td>
		        </tr>
		      <% end %>
	        </tbody>
          </table>
        </div>
