<div class="container">
	<div class="row">
		<% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
		<div class="col-xs-3">
			<h2>User info</h2>
			<div>
				<%= attachment_image_tag @user, :profile_image, :fill, 120, 120, format: 'jpeg', class: "img-squire pull-left profile-img", fallback: "no_image.jpg", size:'120x120' %>
			</div>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
					    <th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
					    <th><%= @user.introduction %></th>
					</tr>
					<tr>
						<th>follows</th>
						<th><%= @user.followings.count %></th>
					</tr>
					<tr>
						<th>followers</th>
						<th><%= @user.followers.count %></th>
					<tr>
				</tbody>
			</table>

			<%= render 'relationships/follow_button', user: @user %>

		    <div class="user-edit">
			    <%=link_to edit_user_path(@user), class: 'btn btn-default btn-xs btn-block' do %>
			      <span class="glyphicon glyphicon-wrench" aria-hidden="true">
			      </span>
			    <% end %>
		    </div>

		    <div>
			    <h2>New book</h2>
			    <%= form_for(@book) do |f| %>
			      <div>Title</div>
			      <%= f.text_area :title %>
			      <div>Opinion</div>
			      <%= f.text_area :body %>
			      <%= f.submit 'Create Book', class: 'btn btn-default btn-xs btn-block btn-primary' %>
			    <% end %>
	        </div>
	    </div>


        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table">
	        <thead>
		      <tr>
			    <th></th>
			    <th>Title</th>
			    <th>Opinion</th>
		      </tr>
	        </thead>
	        <tbody>
		      <% @books.each do |book| %>
		        <tr>
			      <th>
				    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-squire pull-left profile-img", fallback: "no_image.jpg", size:'60x60' %>
			      </th>
			      <td>
				    <%= link_to book.title, book_path(book.id) %>
			      </td>
			      <td>
				    <%= book.body %>
			      </td>
		        </tr>
		      <% end %>
	        </tbody>
          </table>
        </div>
    </div>
</div>
